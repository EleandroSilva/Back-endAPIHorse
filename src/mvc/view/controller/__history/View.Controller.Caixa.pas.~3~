unit View.Controller.Caixa;

interface

uses
  System.Classes,
  System.SysUtils,
  System.JSON,
  Vcl.StdCtrls,
  Data.DB,
  FireDAC.Comp.Client,
  DataSet.Serialize,
  Horse,
  Horse.BasicAuthentication,
  Controller.Interfaces;

type
  TViewControllerCaixa= class
    private
      FController    : iController;
      FDSCaixaDiario : TDataSource;

      FBody       : TJSONValue;
      FJSONObject : TJSONObject;
      FJSONArray  : TJSONArray;
      //Json Caixa Diario-->tabela pai
      FJSONObjectCaixaDiario : TJSONObject;
      FJSONArrayCaixaDiario  : TJSONArray;

      FQuantidadeRegistro : Integer;

      procedure GetAll (Req: THorseRequest; Res: THorseResponse; Next : TProc);
      procedure GetbyId(Req: THorseRequest; Res: THorseResponse; Next : TProc);
      procedure Post   (Req: THorseRequest; Res: THorseResponse; Next : TProc);
      procedure Put    (Req: THorseRequest; Res: THorseResponse; Next : TProc);
      procedure Delete (Req: THorseRequest; Res: THorseResponse; Next : TProc);
      procedure Registry;
    public
      constructor Create;
      destructor Destroy; override;
  end;

implementation

uses
  Imp.Controller;

{ TViewControllerCaixa }

constructor TViewControllerCaixa.Create;
begin
  FController    := TController.New;
  FDSCaixaDiario := TDataSource.Create(nil);
  Registry;
end;

destructor TViewControllerCaixa.Destroy;
begin
  inherited;
end;

procedure TViewControllerCaixa.GetAll(Req: THorseRequest; Res: THorseResponse; Next: TProc);
var
  lQuantidadeRegistro : Integer;
begin
  lQuantidadeRegistro := 0;
  try
    try
      if Req.Query.Field('nomeusuario').AsString<>'' then
        lQuantidadeRegistro := FController
                                 .FactoryEntidade
                                   .DAOCaixaDiario
                                     .This
                                       .Usuario
                                         .NomeUsuario(Req.Query.Field('nomeusuario').AsString)
                                         .&End
                                       .&End
                                     .GetbyParams
                                   .DataSet(FDSCaixaDiario)
                                   .QuantidadeRegistro
      else
        lQuantidadeRegistro := FController
                                 .FactoryEntidade
                                   .DAOCaixaDiario
                                     .GetAll
                                   .DataSet(FDSCaixaDiario)
                                   .QuantidadeRegistro;

    if lQuantidadeRegistro > 1  then
     begin
       FJSONArray := FDSCaixaDiario.DataSet.ToJSONArray();
       Res.Send<TJSONArray>(FJSONArray);
     end
     else
     begin
       FJSONObject := FDSCaixaDiario.DataSet.ToJSONObject();
       Res.Send<TJSONObject>(FJSONObject);
     end;
    except
      on E: Exception do
      begin
        Res.Status(500).Send('Ocorreu um erro interno no servidor'+E.Message);
        Exit;
      end;
    end;
  finally
    if not FDSCaixaDiario.DataSet.IsEmpty then
    begin
      //LoopCaixaDiario;
      if lQuantidadeRegistro > 1 then
        Res.Send<TJSONArray>(FJSONArrayCaixaDiario) else
        Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
      Res.Status(201).Send('Registro encontrado com sucesso!');
    end
    else
    begin
      Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
      Res.Status(400).Send('Registro não encontrado!');
    end;
  end;
end;

procedure TViewControllerCaixa.GetbyId(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
  try
    try
      FController
        .FactoryEntidade
          .DAOCaixaDiario
            .GetbyId(Req.Params['id'].ToInt64)
          .DataSet(FDSCaixaDiario)
    except
      on E: Exception do
      begin
        Res.Status(500).Send('Ocorreu um erro interno no servidor'+E.Message);
        Exit;
      end;
    end;
  finally
    if not FDSCaixaDiario.DataSet.IsEmpty then
    begin
      //LoopCaixaDiario;
      Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
      Res.Status(201).Send('Registro encontrado com sucesso!');
    end
    else
    begin
      Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
      Res.Status(400).Send('Registro não encontrado!');
    end;
  end;
end;

procedure TViewControllerCaixa.Post(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
  try
    try
      FJSONObjectCaixaDiario := Req.Body<TJSONObject>;
      FController
        .FactoryEntidade
          .DAOCaixaDiario
            .This
              .IdEmpresa      (FJSONObjectCaixaDiario.GetValue<integer>  ('idempresa'))
              .IdUsuario      (FJSONObjectCaixaDiario.GetValue<Integer>  ('idusuario'))
              .ValorInicial   (FJSONObjectCaixaDiario.GetValue<Currency> ('valorinicial'))
              .DataHoraEmissao(FJSONObjectCaixaDiario.GetValue<TDateTime>('datahoraemissao'))
              .Status         ('A')
            .&End
          .Post;
  except
    on E: Exception do
    begin
      Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
      Res.Status(500).Send('Ocorreu um erro interno no servidor'+E.Message);
      Exit;
    end;
  end;
  finally
    Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
    Res.Status(204).Send('Registro incluído com sucesso!');
  end;
end;

procedure TViewControllerCaixa.Put(Req: THorseRequest;Res: THorseResponse; Next: TProc);
begin
  try
    try
      FJSONObjectCaixaDiario := Req.Body<TJSONObject>;
      FController
        .FactoryEntidade
          .DAOCaixaDiario
            .This
              .Id             (FJSONObjectCaixaDiario.GetValue<Integer>  ('id'))
              .IdEmpresa      (FJSONObjectCaixaDiario.GetValue<Integer>  ('idempresa'))
              .ValorInicial   (FJSONObjectCaixaDiario.GetValue<Currency> ('valorinicial'))
            .&End
          .Put;
  except
    on E: Exception do
    begin
      Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
      Res.Status(500).Send('Ocorreu um erro interno no servidor'+E.Message);
      Exit;
    end;
  end;
  finally
    Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
    Res.Status(204).Send('Registro alterado com sucesso!');
  end;
end;

procedure TViewControllerCaixa.Delete(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
  try
    try
      FController
        .FactoryEntidade
          .DAOCaixaDiario
            .This
              .Id(Req.Params['id'].ToInt64)
            .&End
          .Delete;
    except
      on E: Exception do
      begin
        Res.Status(500).Send('Ocorreu um erro interno no servidor'+E.Message);
        Exit;
      end;
    End;
  Finally
    Res.Send<TJSONObject>(FJSONObjectCaixaDiario);
    Res.Status(204).Send('Registro excluído com sucesso!');
  end;
end;

procedure TViewControllerCaixa.Registry;
begin
  THorse
      .Group
        .Prefix  ('bmw')
          .Get   ('/caixa-diario/:id' , GetbyId)
          .Get   ('/caixa-diario'     , GetAll)
          .Post  ('caixa-diario'      , Post)
          .Put   ('caixa-diario/:id'  , Put)
          .Delete('caixa-diario/:id'  , Delete);
end;

end.
