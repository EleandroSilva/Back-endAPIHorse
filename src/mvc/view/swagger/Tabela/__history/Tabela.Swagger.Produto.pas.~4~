unit Tabela.Swagger.Produto;

interface

type
  TProduto = class
    private
      FId` bigint NOT NULL AUTO_INCREMENT,
      FIdEmpresa` bigint NOT NULL,
      FIdCategoria` bigint NOT NULL,
      FIdUnidade` bigint NOT NULL,
      FGtin` varchar(20) CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci DEFAULT NULL,
      FCeanTrib` varchar(20) CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci NOT NULL COMMENT 'sera o codigo unitario do produto',
      FCean` varchar(20) CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci NOT NULL COMMENT 'seria o preco(exemplo de um fardo de cerveja)',
      FNome                : String{Varchar(100) Not null->UniqueKey}
      FNCM                 : Integer;{Integer Not Null}
      FPrecoCusto          : Currency;{decimal(10,4) Not Null}
      FAliquotaLucro       : Currency;{decimal(10,2) Not Null}
      FPrecoVendaGelado    : Currency;{decimal(10,4) Not Null}
      FPrecoVendaNatural   : Currency;{decimal(10,4) Not Null}
      FPrecoPromocional    : Currency;{decimal(10,4) Not Null 'Usar esta coluna quanto o estabelecimento queira fazer preço promocional'}
      FEstoqueAnterior     : Currency;{decimal(10,4) Not Null}
      FEstoqueMaximo       : Currency;{decimal(10,4) Not Null}
      FEstoqueMinimo       : Currency;{decimal(10,4) Not Null}
      FEstoqueAtual        : Currency;{decimal(10,4) Not Null}
      FOrigem              : Integer;{Integer Not Null 'Coluna informa se este produto foi importado\Usado para calculo tabela IBPT(ufunctioncalculo-calcula_imp_aprox_tab_ibtp-)\r\n0 - 3 - 4 - 5=Não foi importado então não calcular\r\n1 - 2 - 6 - 7=Sim foi importado então calcular'}
      FVolume              : Integer;{Integer Not Null}
      FQuantidadeEmbalagem : Integer;{Integer Not Null}
      FBalanca             : Integer; {Integer Not Null COMMENT 'Informar 0 = este produto não é de balança; 1 = este produto é de balança 2 = todos'}
      FPesoLiquido         : Currency;{decimal(10,2) Not Null}
      FPesoBruto           : Currency;{decimal(10,2) Not Null->Peso total do produto}
      FDataEmissao         : TDate;{Not Null->Data que cadastrou no sistema}
      FAtivo               : Integer;{Integer ->Nnot Null}
    public
      property Id                    : Integer read FId                    write FId;
      property CNPJ                  : String  read FCNPJ                  write FCNPJ;
      property InscricaoEstadual     : String  read FInscricaoEstadual     write FInscricaoEstadual;
      property NomeEmpresarial       : String  read FNomeEmpresarial       write FNomeEmpresarial;
      property NomeFantasia          : String  read FNomeFantasia          write FNomeFantasia;
      property NaturezaJuridica      : String  read FNaturezaJuridica      write FNaturezaJuridica;
      property DataEmissao           : TDate   read FDataEmissao           write FDataEmissao;
      property DataSituacaoCadastral : TDate   read FDataSituacaoCadastral write FDataSituacaoCadastral;
      property Ativo                 : Integer read FAtivo                 write FAtivo;
  end;

implementation

end.
