unit Tabela.Swagger.Usuario;

interface

uses
  GBSwagger.Model.Attributes;

//Relacionamento com tabela empresa <- Id=IdEmpresa->Tabela Usuario
type
  TUsuario = class
    private
      FId        : Integer;{bigint-Primary Key}
      FIdEmpresa : Integer;{bigint-Foreign Key->Tabela empresa->Excluír Cascade; Alterar Cascade}
      FNome      : String; {Varchar(120)->Not Null}
      FEmail     : String; {Varchar(100)->Unique Key(Email+Senha)->Not Null}
      FSenha     : String; {Varchar(20)->Unique Key(Email+Senha)->Not Null}
      FAtivo     : Integer;{Integer->0-Inativo 1-Ativo->Not Null}
    public
      [SwagParamQuery('id', true)]
      [SwagProp('PRIMARY KEY (auto_increment)', True)]
      [SwagProp(False, True)]
      property Id        : Integer read FId        write FId;
      [SwagProp(True, True)]
      property IdEmpresa : Integer read FIdempresa write FIdempresa;
      [SwagProp('Varchar(120) Not Null', True, True)]
      property Nome      : String  read FNome      write FNome;
      [SwagProp('Varchar(80) Not Null',True, True)]
      property Email     : String  read FEmail     write FEmail;
      [SwagProp('Varchar(20) Not Null',True, True)]
      property Senha     : String  read FSenha     write FSenha;
      [SwagProp('0-Inavito; 1-Ativo',True, True)]
      property Ativo     : Integer read FAtivo     write FAtivo;
  end;

implementation

end.
