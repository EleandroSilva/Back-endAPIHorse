unit Tabela.Swagger.Usuario;

interface

//Relacionamento com tabela empresa <- Id=IdEmpresa->Tabela Usuario
type
  TUsuario = class
    private
      FId        : Integer;{bigint-Primary Key}
      FIdEmpresa : Integer;{bigint-Foreign Key->Tabela empresa->Excluír Cascade; Alterar Cascade}
      FNome      : String; {Varchar(120)}
      FEmail     : String; {Varchar(100)->Unique Key(Email+Senha)}
      FSenha     : String; {Varchar(20)->Unique Key(Email+Senha)}
      FAtivo     : Integer;{Integer->0-Inativo 1-Ativo}
    public
      property Id        : Integer read FId        write FId;
      property IdEmpresa : Integer read FIdempresa write FIdempresa;
      property Nome      : String  read FNome      write FNome;
      property Email     : String  read FEmail     write FEmail;
      property Senha     : String  read FSenha     write FSenha;
      property Ativo     : Integer read FAtivo     write FAtivo;
  end;

implementation

end.
