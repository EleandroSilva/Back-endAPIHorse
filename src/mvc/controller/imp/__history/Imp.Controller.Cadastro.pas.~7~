unit Imp.Controller.Cadastro;

interface

uses
  Controller.Cadastro.Interfaces,
  Model.Factory.Cadastro.Interfaces;

type
  TControllerCadastro =class(TInterfacedObject, iControllerCadastro)
    private
      FFactoryCadastro : iFactoryCadastro;
    public
      constructor Create;
      destructor Destroy; override;
      class function New : iControllerCadastro;
      function FactoryCadastro : iFactoryCadastro;
  end;

implementation

uses
  Model.Factory.Imp.Cadastro;


{ TControllerCadastro }

constructor TControllerCadastro.Create;
begin
//
end;

destructor TControllerCadastro.Destroy;
begin
  inherited;
end;

class function TControllerCadastro.New: iControllerCadastro;
begin
  Result := Self.Create;
end;

function TControllerCadastro.FactoryCadastro: iFactoryCadastro;
begin
  if not Assigned(FFactoryCadastro) then
    FFactoryCadastro := TFactoryCadastro.New;

  Result := FFactoryCadastro;
end;

end.
